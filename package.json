{
  "name": "root",
  "private": true,
  "scripts": {
    "test": "yarn lint",
    "test:packages": "yarn lerna run test",
    "lint": "yarn eslint . && yarn solium -d .",
    "prettier": "prettier \"**/*.{js,json,css,md}\" --write",
    "lerna:version": "yarn lerna version --no-push",
    "lerna:publish": "lerna publish from-package",
    "postinstall": "yarn lerna run build"
  },
  "devDependencies": {
    "eslint": "^5.13.0",
    "eslint-config-web3studio": "^1.1.0",
    "husky": "^1.3.1",
    "lerna": "^3.10.8",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.10.0",
    "solium": "^1.2.2",
    "truffle": "^5.0.3"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn pretty-quick --staged"
    }
  }
}
